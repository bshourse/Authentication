<div class="article">
  <div class="container">
    <p class="date"><%= @article.created_at.strftime('%b %d') %></p>
    <h2><%= @article.title %></h2>
    <p class="author">by <%= @article.author %></p>
    <p class="article_content"><%= @article.body %></p>

    <% if current_user && current_user.author? %>
      <p class="article-edit">
        <%= link_to "Edit Article", edit_article_path(@article.id) %>
      </p>
      <p class="article-delete">
        <%= link_to "Delete Article", article_path(@article), method: "delete" %>
      </p>
      <% end %>
  </div>
</div>