<div class="login">
  <div class="container">
    <!-- In the signup form, we used form_for(@user) do |f| since we had a User model to refer to. For the login form, we donâ€™t have a Session model, so we instead use the name of the resource and the corresponding URL with -->
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.email_field :email, :placeholder => "Email" %>
      <%= f.password_field :password, :placeholder => "Password" %>
      <%= f.submit "Log in", class: "btn-submit" %>
    <%end%>
  </div>
</div>